# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec i3-msg exit
# shut down the PC
bindsym $mod+Shift+s exec systemctl poweroff
bindsym $mod+Shift+i exec systemctl reboot 

# Make the currently focused window a scratchpad
bindsym $mod+Shift+slash move scratchpad
# Take a screenshot with Flameshot.
bindsym Print exec --no-startup-id flameshot gui

# Show the first scratchpad window
bindsym $mod+slash scratchpad show

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 25 px or 25 ppt
        bindsym j resize grow height 25 px or 25 ppt
        bindsym k resize shrink height 25 px or 25 ppt
        bindsym l resize grow width 25 px or 25 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 25 px or 25 ppt
        bindsym Down resize grow height 25 px or 25 ppt
        bindsym Up resize shrink height 25 px or 25 ppt
        bindsym Right resize grow width 25 px or 25 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+shift+x exec lock.sh

