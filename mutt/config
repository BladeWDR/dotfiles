# configure sidebar
#mailboxes "~/.mail/ssbtech/Inbox" "~/.mail/gmail/Inbox" "~/.mail/gmail/AO3"
set sidebar_visible = yes
#set sidebar_format = "%B%<F? [%F]>%* %<N?%N/>%S"
set sidebar_format = "%B%* %n"
